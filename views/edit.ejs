<% include ./partials/header %>
    <div class="card container">
      <div class="card-body">
        <h1>Edit <%= book.name%></h1>
    </div>
    <form action="/index/<%= book._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="book[title]" value="<%= book.title %>">
      </div> 
      <div class="form-group">
        <label>Author</label>
        <input type="text" class="form-control" name="book[author]" value="<%= book.author %>">
        <label>Price</label>
        <input type="number" class="form-control" name="book[price]" placeholder="Price" min="0.01" step="0.01" value="<%= book.price %>">
      </div> 
      <div class="form-group">
        <label>Additional info about your pet</label>
        <textarea class="form-control" name="book[description]"><%= book.description %></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
<% include ./partials/footer %>